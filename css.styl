$light-highlight = #F4F4F4
$med-highlight =  #2980B9
$dark-highlight = #2980B9
$link = #4789AC

$greedy = #E67E22
$greedy-border = #D35400

$uptodate =  #2ECC71
$uptodate-border = #28B362

$outofdate = #E74C3C
$outofdate-border = #C0392B

.package
  overflow: hidden

  h1
    color: $dark-highlight
    margin: 15px 0 0 0

  .status
    border-radius: 3px
    float: right
    overflow: hidden
    padding-left: 10px

    span
      color: #FFF
      font-weight: bold
      padding: 3px 10px

  .uptodate
    border: 1px solid $uptodate-border

    span
      background: $uptodate

  .outofdate
    border: 1px solid $outofdate-border

    span
      background: $outofdate

.summary
  li
    list-style: none
    margin: 20px 0

  .boxed
    position: relative

    &:before
      border-radius: 3px
      content: ''
      display: block
      height: 12px
      left: -20px
      position: absolute
      top: 2px
      width: 12px

  .uptodate:before
    background: $uptodate
    border: 1px solid $uptodate-border

  .outofdate:before
    background: $outofdate
    border: 1px solid $outofdate-border

table
  border-collapse: collapse
  border-spacing: 0
  border: 0
  margin: 15px 0
  width: 100%

  .name
    width: 30%

  .license
    width: 20%

  .status
    width: 20%

  .version
    width: 10%

  thead
    border-bottom: 1px solid #eaeaea

  th
    font-weight: normal

  td,
  th
    border: 0
    padding: 6px 13px
    text-align: left

    &.version
      text-align: right

  tr.outofdate
    color: $outofdate
    font-weight: bold

  tr.greedy
    color: $greedy
    font-weight: bold

  tfoot.more a
    border: 1px solid lighten($link, 60%)
    display: block
    margin-top: 20px
    padding: 10px
    text-align: center
    width: 100%

    &:hover
      text-decoration: none
